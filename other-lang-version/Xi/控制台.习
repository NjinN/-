#包含 "习语言系统.接口"

#包含 "作业器.习"

无类型 主函数( ){
	作业器 处理器;
	
	容器 主语境;
	主语境.绑定表 = 新哈希表(100);
	主语境.父 = 空指针;
	
	处理器.境 = &主语境;
		
	作业线 主线;
	主线.境 = 处理器.境;
	主线.线长 = 100;
	主线.栈 = 内存申请并清零((主线.线长 + 1) * 类型长度(令牌));
	主线.序号 = 0;
	主线.父 = 空指针;
	
	处理器.线 = &主线;
	
	//令牌 *令牌组 = 转令牌组(分词("n: 123 n"), &主语境, 1);
	//执行序(处理器, 令牌组);
	
	字符 *输入代码 = 内存申请并清零(2000);
	当(真)重复{
		输出字符串(">> ");
		如果(输入字符串(输入代码, 2000) 等于 0){
			继续;
		}	
		执行序(处理器, 转令牌组(分词(输入代码), &主语境, 1));
	}
	
	暂停();
	
}















